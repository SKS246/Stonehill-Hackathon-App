<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkerProfile"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/askQToolBar"
        android:background="@color/theme3"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Job Profiles"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/theme1"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagedp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/theme3"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@color/theme1"
                android:textColorHint="@color/theme2"
                android:backgroundTint="@color/theme2"/>

            <TextView
                android:id="@+id/numplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@color/theme1"
                android:textColorHint="@color/theme2"
                android:backgroundTint="@color/theme2"/>

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/profplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/theme2"
        android:text="Carpenter"/>

    <TextView
        android:id="@+id/bioplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the bio"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@color/theme1"
        android:textColorHint="@color/theme2"
        android:backgroundTint="@color/theme2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/theme3"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sendReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Job"
            android:backgroundTint="@color/theme3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Phone number"
        android:backgroundTint="@color/theme1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>

</LinearLayout>